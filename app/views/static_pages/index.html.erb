

<% if params[:tag].nil? %>
	<p>Most recent images:</p>
	<% cache ("flickr-sidebar") do %>
  	<%= render_recent %>
	<% end %>
<% else %>
	<% cache ("flickr-sidebar") do %>
  	<%= render_flickr_sidebar_widget(params[:tag], params[:license], params[:sort], params[:safe_search]) %>
	<% end %>
<% end %>